{
	"name": "simple-react-full-stack",
	"version": "1.0.0",
	"description": "Modern full-stack boilerplate with React 18, TypeScript, Vite, Express, and deployment-ready configuration.",
	"main": "src/server/index.ts",
	"scripts": {
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"client": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"server": "nodemon --exec ts-node src/server/index.ts",
		"build:server": "tsc --project tsconfig.server.json",
		"build:all": "npm run build && npm run build:server",
		"start": "npm run build:all && node dist/server/index.js",
		"start:prod": "NODE_ENV=production node dist/server/index.js",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint . --ext .ts,.tsx --fix",
		"lint:check": "eslint . --ext .ts,.tsx",
		"type-check": "tsc --noEmit",
		"type-check:server": "tsc --project tsconfig.server.json --noEmit",
		"clean": "rm -rf dist node_modules/.cache",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"author": "Sandeep Raveesh",
	"license": "ISC",
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=8.0.0"
	},
	"dependencies": {
		"compression": "^1.8.0",
		"cors": "^2.8.5",
		"express": "^4.16.3",
		"helmet": "^8.1.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@types/compression": "^1.8.1",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.0.1",
		"@types/react": "^18.3.23",
		"@types/react-dom": "^18.3.7",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"@vitejs/plugin-react": "^4.5.2",
		"concurrently": "^4.0.0",
		"eslint": "^8.57.1",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-react-refresh": "^0.4.20",
		"jest": "^29.7.0",
		"nodemon": "^1.17.3",
		"prettier": "^3.5.3",
		"supertest": "^7.1.1",
		"ts-jest": "^29.4.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"vite": "^6.3.5"
	}
}
